<div class="byline">
  <%= image_tag url_for(user.avatar), class: "avatar float-start" if user.avatar.attached? %>
  
  <div class="poster">
    <%= link_to user_path(user) do %>
      <div>
        <%= user.first_name %> <%= user.last_name %>
      </div>
    <% end %>
    <% if updated_at != created_at %>
      <div>
        Updated <%= updated_at.strftime("%B %-d, %Y at %l:%M%p") %>
      </div>
    <% else %>
      <div>
        Posted <%= created_at.strftime("%B %-d, %Y at %l:%M%p") %>
      </div>
    <% end %>
  </div>
</div>